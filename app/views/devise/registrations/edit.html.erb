<div class="card mb-3">
  <div class="card-header">
    <h4>Edit Profile<% resource_name.to_s.humanize %></h4>
  </div>
  <div class="card-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, class:"form-control mb-3", placeholder:"Password", autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, class:"form-control mb-3", placeholder:"New Password (6 Characters Minimum)", autocomplete: "new-password" %>

  </div>

  <div class="field form-group">
    <%= f.password_field :password_confirmation, class:"form-control mb-3", placeholder:"Re-type New Password", autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :current_password, class:"form-control mb-3", placeholder:"Type Your Current Password to Confirm", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"btn btn-secondary mb-3" %>
  </div>
<% end %>

  </div>
</div>





<div class="card">
  <div class="card-header">
    <h4>Cancel my account</h4>
  </div>
  <div class="card-body">
    <h5 class="card-title">Unhappy?</h5>
     <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %>
  </div>
</div>



<%= link_to "Back", :back %>
